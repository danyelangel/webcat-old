.container(md-theme="db-light")
  md-toolbar
    .md-toolbar-tools
      div(flex)
      md-button.md-raised.md-accent(
      ng-disabled="$ctrl.isDisabled"
      ng-click="$ctrl.addTao()")
        |{{$ctrl.$l('NEW_DOCUMENT')}}
  
  // Archived  
  md-toolbar
    .md-toolbar-tools
      .md-body-1|{{$ctrl.$l('UNPUBLISHED')}}
      div(flex)
      md-button.md-icon-button.md-accent(
      ng-click="$ctrl.hideArchived = !$ctrl.hideArchived")
        md-icon|{{$ctrl.hideArchived?'add':'remove'}}
  div(layout="row" layout-wrap ng-hide="$ctrl.hideArchived")
    dashboard-document(
    flex-gt-sm="33"
    flex-gt-xs="50"
    flex-xs="100"
    is-disabled="$ctrl.isDisabled"
    ng-repeat="(taoId, value) in $ctrl.UserState.userTaos"
    metadata="$ctrl.getTao(taoId)"
    tao-id="taoId"
    on-remove="$ctrl.removeTao(taoId)"
    on-unarchive = "$ctrl.unarchiveTao(taoId)"
    on-edit="$ctrl.editTao(taoId)"
    ng-if="$ctrl.getTao(taoId).isArchived")
  
  // Unarchived
  md-toolbar
    .md-toolbar-tools
      .md-body-1|{{$ctrl.$l('PUBLISHED')}}
      div(flex)
      md-button.md-icon-button.md-accent(
      ng-click="$ctrl.hideUnarchived = !$ctrl.hideUnarchived")
        md-icon|{{$ctrl.hideUnarchived?'add':'remove'}}
  div(layout="row" layout-wrap ng-hide="$ctrl.hideUnarchived")
    dashboard-document(
    flex-gt-sm="33"
    flex-gt-xs="50"
    flex-xs="100"
    is-disabled="$ctrl.isDisabled"
    ng-repeat="(taoId, value) in $ctrl.UserState.userTaos"
    tao-id="taoId"
    metadata="$ctrl.getTao(taoId)"
    on-remove="$ctrl.removeTao(taoId)"
    on-archive = "$ctrl.archiveTao(taoId)"
    on-edit="$ctrl.editTao(taoId)"
    ng-if="!$ctrl.getTao(taoId).isArchived")
    
    