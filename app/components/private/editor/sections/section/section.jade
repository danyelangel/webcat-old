.section-wrapper(
layout="column" 
layout-align="start center"
layout-align-gt-sm="center center")
  .section-toolbar(ng-hide="$ctrl.isPreview")
    edit-toolbar
      md-button.md-icon-button(
      ng-hide="$ctrl.section.content.image.imageUrl"
      ngf-select="$ctrl.uploadImage($file)"
      ngf-multiple="false"
      accept="image/*"
      ngf-resize="{width: 1920}")
        md-icon|photo
      md-button.md-icon-button(ng-click="$ctrl.remove()")
        md-icon|delete
  .container(
  layout="row"
  layout-align="center center" 
  layout-padding
  layout-margin
  layout-wrap)
    .text(
    flex="90"
    flex-sm="80"
    flex-gt-sm="45"
    flex-order="2"
    flex-order-gt-sm="1"
    ng-class="{'centerText': !$ctrl.section.content.image.imageUrl}")
      .md-headline(
      medium-editor 
      bind-options="{disableReturn: true, disableExtraSpaces: true, toolbar: false}"
      data-placeholder="Título"
      ng-model="$ctrl.section.content.title"
      ng-blur="$ctrl.update()")

      .md-subhead(
      medium-editor 
      bind-options="$ctrl.wysiwygOptions"
      data-placeholder="Descripción"
      ng-model="$ctrl.section.content.description"
      ng-blur="$ctrl.update()")
    .image(
    ng-if="$ctrl.section.content.image.imageUrl"
    flex="90"
    flex-sm="80"
    flex-gt-sm="45"
    flex-order="1"
    flex-order-gt-sm="2")
      img.fullWidth(ng-src="{{$ctrl.section.content.image.imageUrl}}")
      .image-caption(ng-show="$ctrl.section.content.imageCaption || !$ctrl.isPreview")
        .md-body-1(
        medium-editor 
        bind-options="{disableReturn: true, disableExtraSpaces: true, toolbar: false}"
        data-placeholder="Descripción"
        ng-model="$ctrl.section.content.imageCaption"
        ng-blur="$ctrl.update()")
      edit-toolbar(layout-padding ng-hide="$ctrl.isPreview")
        md-button.md-icon-button(
        ngf-select="$ctrl.uploadImage($file)"
        ngf-multiple="false"
        accept="image/*"
        ngf-resize="{width: 1920}")
          md-icon|photo
        md-button.md-icon-button(ng-click="$ctrl.removeImage()")
          md-icon|delete
    
  .background(ng-style="{backgroundImage: 'url('+$ctrl.section.content.image.imageUrl+')'}")